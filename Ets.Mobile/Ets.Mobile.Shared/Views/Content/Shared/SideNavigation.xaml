<UserControl
    x:Class="Ets.Mobile.Views.Content.Shared.SideNavigation"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ets.Mobile.Views.Content.Shared"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:main="using:Ets.Mobile.Views.Content.Main"
    DataContext="{Binding}"
    mc:Ignorable="d"
    d:DesignHeight="800"
    d:DesignWidth="400">
    <Grid>
        <Grid VerticalAlignment="Top" Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <TextBlock Grid.Row="0" Margin="0,3,0,10" FontSize="17" Text="ACCOUNT" Foreground="{StaticResource EtsTextSecondaryBrush}"></TextBlock>
            <main:Profile Grid.Row="1" x:Name="Profile" />
        </Grid>
        <Border VerticalAlignment="Bottom" BorderBrush="DarkGray" BorderThickness="0,1,0,0">
            <Grid Margin="10">
                <HyperlinkButton Height="50"
                                 FontSize="22"
                    Name="Logout"
					HorizontalAlignment="Stretch"
                    Padding="-190,0,0,0"
					Content="Logout"
					Foreground="{StaticResource EtsTextSecondaryBrush}" 
					BorderThickness="0" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
