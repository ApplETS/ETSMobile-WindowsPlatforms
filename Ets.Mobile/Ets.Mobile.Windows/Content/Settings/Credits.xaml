<Page
    x:Class="Ets.Mobile.Content.Settings.Credits"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Ets.Mobile.Content.Settings"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <ScrollViewer>
        <StackPanel>
            <StackPanel>
                <TextBlock Text="Paul Betts" Style="{ThemeResource EtsContributerTitleStyle}" />
                <TextBlock x:Uid="PaulBettsContributionsUid" Style="{StaticResource EtsTextBlockGray4}" TextWrapping="WrapWholeWords" />
                <HyperlinkButton Content="@paulcbetts" NavigateUri="https://github.com/paulcbetts" Style="{ThemeResource EtsContributerHyperlinkStyle}" />
            </StackPanel>
            <StackPanel>
                <TextBlock Text="ReactiveUI" Style="{ThemeResource EtsContributerTitleStyle}" />
                <TextBlock x:Uid="ReactiveUIDescriptionUid" Style="{StaticResource EtsTextBlockGray4}" TextWrapping="WrapWholeWords" />
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Splat" Style="{ThemeResource EtsContributerTitleStyle}" />
                <TextBlock x:Uid="SplatDescriptionUid" Style="{StaticResource EtsTextBlockGray4}" TextWrapping="WrapWholeWords" />
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Refit" Style="{ThemeResource EtsContributerTitleStyle}" />
                <TextBlock x:Uid="RefitDescriptionUid" Style="{StaticResource EtsTextBlockGray4}" TextWrapping="WrapWholeWords" />
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Fusillade" Style="{ThemeResource EtsContributerTitleStyle}" />
                <TextBlock x:Uid="FusilladeDescriptionUid" Style="{StaticResource EtsTextBlockGray4}" TextWrapping="WrapWholeWords" />
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Akavache" Style="{ThemeResource EtsContributerTitleStyle}" />
                <TextBlock x:Uid="AkavacheDescriptionUid" Style="{StaticResource EtsTextBlockGray4}" TextWrapping="WrapWholeWords" />
            </StackPanel>
            <StackPanel>
                <TextBlock Text="ReactiveExtensions" Style="{ThemeResource EtsContributerTitleStyle}" />
                <TextBlock x:Uid="ReactiveExtensionsDescriptionUid" Style="{StaticResource EtsTextBlockGray4}" TextWrapping="WrapWholeWords"/>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Sqlite" Style="{ThemeResource EtsContributerTitleStyle}" />
                <TextBlock x:Uid="SqliteDescriptionUid" Style="{StaticResource EtsTextBlockGray4}" TextWrapping="WrapWholeWords" />
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Crittercism" Style="{ThemeResource EtsContributerTitleStyle}" />
                <TextBlock x:Uid="CrittercismDescriptionUid" Style="{StaticResource EtsTextBlockGray4}" TextWrapping="WrapWholeWords" />
            </StackPanel>
            <StackPanel>
                <TextBlock Text="ModernHttpClient" Style="{ThemeResource EtsContributerTitleStyle}" />
                <RichTextBlock Style="{StaticResource EtsRichTextBlockGray4}" TextWrapping="WrapWholeWords">
                    <Paragraph>
                        <Run x:Uid="ModernHttpClientDescriptionUid" />
                        <InlineUIContainer>
                            <Image Source="/Assets/Credits/ModernHttpClient.png" Height="20" />
                        </InlineUIContainer>
                    </Paragraph>
                </RichTextBlock>
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Newtonsoft.Json" Style="{ThemeResource EtsContributerTitleStyle}" />
                <TextBlock x:Uid="NewtonsoftJsonDescriptionUid" Style="{StaticResource EtsTextBlockGray4}" TextWrapping="WrapWholeWords" />
            </StackPanel>
            <StackPanel>
                <TextBlock Text="Syncfusion" Style="{ThemeResource EtsContributerTitleStyle}" />
                <TextBlock x:Uid="SyncfusionDescriptionUid" Style="{StaticResource EtsTextBlockGray4}" TextWrapping="WrapWholeWords" />
            </StackPanel>
        </StackPanel>
    </ScrollViewer>
</Page>
